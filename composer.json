{
    "name": "juanchosl/tokenizer",
    "description": "A small collection of encoder/decoder Token for authentication",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/JuanchoSL/Tokenizer",
    "minimum-stability": "stable",
    "keywords": [
        "token",
        "basic token",
        "digest token",
        "bearer token",
        "jwt token"
    ],
    "authors": [
        {
            "name": "Juan SÃ¡nchez Lecegui",
            "email": "JuanchoSL@hotmail.com",
            "homepage": "https://github.com/JuanchoSL/"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-hash": "*",
        "juanchosl/exceptions": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.25"
    },
    "autoload": {
        "psr-4": {
            "JuanchoSL\\Tokenizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JuanchoSL\\Tokenizer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --configuration phpunit.xml tests"
    }
}